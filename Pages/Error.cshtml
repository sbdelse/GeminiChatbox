@page
@model ErrorModel
@{
    ViewData["Title"] = "错误";
}

<div class="container my-5 text-center">
    <div class="alert alert-danger">
        <h1><i class="fas fa-exclamation-triangle"></i> 抱歉，出错了</h1>
        <p class="lead">处理您的请求时发生错误。</p>
        
        @if (Model.ShowRequestId)
        {
            <p class="small">
                <strong>请求 ID:</strong> <code>@Model.RequestId</code>
            </p>
        }
        
        <div class="mt-4">
            <a href="/" class="btn btn-primary">返回首页</a>
        </div>
    </div>

    @if (Model.IsDevMode)
    {
        <div class="alert alert-warning mt-4">
            <h3>开发模式</h3>
            <p>当前处于开发环境模式，显示详细错误信息。请确保在部署时禁用开发模式。</p>
        </div>
    }
</div>
